<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/appCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/gray"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:paddingLeft="5dp"
                android:textSize="15sp"
                android:id="@+id/textViewSacco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgQrCode"
                android:textColor="@color/white"
                android:text="Bungoma Line Sacco"/>

            <TextView
                android:paddingLeft="5dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:id="@+id/textViewRegNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewPhoneNumber"
                android:layout_toRightOf="@id/imgQrCode"
                android:text="KCX001A" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>